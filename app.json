{
    "id": "nl.climate.daikin",
	"version": "0.0.1",
    "compatibility": ">=1.5.6",
    "sdk": 2,
    "name": {
        "en": "Daikin AC",
		"nl": "Daikin AC"
    },
    "description": {
        "en": "Adds support for Daikin Airconditioners.",
		"nl": "Adds support for Daikin Airconditioners."
    },
    "category": [
        "appliances",
        "climate"
    ],
    "images": {
      "large": "/assets/images/large.png",
      "small": "/assets/images/small.png"
    },
	"permission": [],
    "author": {
        "name": "Peter Eier",
        "email": "peter.eier@upcmail.nl"
    },
	"contributors": {
		"developers": [
			{
				"name": "Peter EIER",
				"email": "peter.eier@upcmail.nl"
			}
		]
	},
    "contributing": {
      "donate": {
        "paypal": {
          "username": "my_paypal.me_username",
          "currency": "EUR"
        }
      }
    },
	"flow": {
    "triggers": [
      {
        "id": "fan_speed",
        "title": {
          "en": "Fan speed changed",
          "nl": "Fan snelheid is wijzigd"
        },
        "hint": {
          "en": "Trigger something when the airconditioner fan speed changes.",
          "nl": "Trigger iets wanneer de airconditioner fan snelheid wijzigd."
        },
        "args": [
          {
            "name": "device",
            "type": "device"
          },
          {
            "name": "fanspeed",
            "type": "dropdown",
            "values": [
              {
                "id": "Auto",
                "label": {
                  "en": "Automatic",
                  "nl": "Automatisch"
                }
              },
              {
                "id": "Low",
                "label": {
                  "en": "Lowest speed",
                  "nl": "Laagste snelheid"
                }
              },
              {
                "id": "High",
                "label": {
                  "en": "Highest speed",
                  "nl": "Hoogste snelheid"
                }
              }
            ]
          }
        ]
      }
    ],
    "conditions": [
        {
            "id": "has_temperature_more_than",
            "title": {
                "en": "The temperature !{{is|isn't}} more than",
                "nl": "De temperatuur !{{is|is niet}} meer dan"
            },
            "args": [
                {
                    "name": "device",
                    "type": "device"
                },
                {
                    "name": "temperature",
                    "type": "number",
                    "placeholder": {
                        "en": "in C",
                        "nl": "in C"
                    }
                }
            ]
        },
        {
            "id": "has_temperature_less_than",
            "title": {
                "en": "The temperature !{{is|isn't}} less than",
                "nl": "De temperatuur !{{is|is niet}} minder dan"
            },
            "args": [
                {
                    "name": "device",
                    "type": "device"
                },
                {
                    "name": "temperature",
                    "type": "number",
                    "placeholder": {
                        "en": "in C",
                        "nl": "in C"
                    }
                }
            ]
        },
        {
            "id": "has_temperature_between",
            "title": {
                "en": "The temperature !{{is|isn't}} between",
                "nl": "De temperatuur !{{is|is niet}} tussen"
            },
            "args": [
                {
                    "name": "device",
                    "type": "device"
                },
                {
                    "name": "temperature_from",
                    "type": "number",
                    "placeholder": {
                        "en": "in C",
                        "nl": "in C"
                    }
                },
                                    {
                    "name": "temperature_to",
                    "type": "number",
                    "placeholder": {
                        "en": "in C",
                        "nl": "in C"
                    }
                }
            ]
        }
    ],
    "actions": [
      {
        "id": "ctrl_power_on",
        "title": {
          "en": "Turn ON the airconditioner",
          "nl": "Zet de airconditioning AAN"
        },
        "args": [
          {
            "type": "device",
            "name": "ctrl_power",
            "filter": "driver_id=ctrl_power"
          }
        ]
      },
      {
        "id": "ctrl_power_off",
        "title": {
          "en": "Turn OFF the airconditioner",
          "nl": "Zet de airconditioning UIT"
        },
        "args": [
          {
            "type": "device",
            "name": "ctrl_power",
            "filter": "driver_id=ctrl_power"
          }
        ]
      }
    ]
  },
  "drivers": [
   {
     "id": "inverter",
     "name": {
       "en": "Inverter",
       "nl": "Inverter"
     },
     "class": "other",     
     "capabilities": [
       "thermostat_mode",
       "target_temperature",
	   "measure_temperature.inside",
       "measure_temperature.outside" 
     ],
     "capabilitiesOptions": {
  		"target_temperature": {
  			"title": {
  				"en": "Target",
  				"nl": "Doel"
             }   
         },         
 		"measure_temperature.inside": {
 			"title": {
 				"en": "inside",
 				"nl": "binnen"
            }   
        },
		"measure_temperature.outside": {
			"title": {
				"en": "outside",
				"nl": "buiten"
			}
		}
     },     
     "mobile": {
         "components": [
             {
                 "id": "button",
                 "capabilities": [ "thermostat_mode"
                 ],
                 "options": {
                    "showTitle": true,
                    "icons": {
                        "thermostat_mode": "./drivers/inverter/assets/icon.svg"
                    }
                }
             },
             {
                 "id": "sensor",
                 "capabilities": [
              	   "measure_temperature.inside",
                   "measure_temperature.outside"			
				 ],
                 "options": {
                    "showTitle": true
                 }
             },
             {
               "id": "thermostat",
               "capabilities": [ "target_temperature" ]
             }
         ]
     },
     "images": {
       "large": "/drivers/inverter/assets/images/large.png",
       "small": "/drivers/inverter/assets/images/small.png"
     },	          
     "pair": [
         {
             "id": "start"
         },
         {
             "id": "list_my_devices",
             "template": "list_devices",
             "navigation": {
                 "next": "add_my_devices"
             }
         },
         {
              "id": "add_my_devices",
              "template": "add_devices"
         }
     ], 	 
     "settings": [{
         "type": "group",
         "label": {
         "en": "Connected via WiFi using:",
         "nl": "Verbonden via WiFi gebruikmakende van:"
         },
         "children": [{
              "id": "inverter_ip",
              "type": "text",
              "label": {
              "en": "IP address",
              "nl": "IP adres"
              },
              "value": ""
          }]
      }]
   }]
}