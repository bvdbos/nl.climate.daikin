{
    "id": "nl.climate.daikin",
	"version": "0.0.2",
    "compatibility": ">=1.5.3",
    "sdk": 2,
    "name": {
        "en": "Daikin AC",
		"nl": "Daikin AC"
    },
    "description": {
        "en": "Adds support for Daikin Airconditioners.",
		"nl": "Adds support for Daikin Airconditioners."
    },
    "category": [
        "appliances",
        "climate"
    ],
    "tags": {
           "en": [ "daikin", "emura", "nextura", "inverter", "airconditioner", "airconditioning" ],
           "nl": [ "daikin", "emura", "nextura", "inverter", "airconditioner", "airconditioning" ]
     },
    "images": {
      "large": "/assets/images/large.png",
      "small": "/assets/images/small.png"
    },
	"permission": [
         "homey:manager:speech-output"
    ],    
    "author": {
        "name": "Peter Eier",
        "email": "peter.eier@upcmail.nl"
    },
	"contributors": {
		"developers": [
			{
				"name": "Peter EIER",
				"email": "peter.eier@upcmail.nl"
			}
		]
	},
    "contributing": {
      "donate": {
        "paypal": {
          "username": "my_paypal.me_username",
          "currency": "EUR"
        }
      }
    },
	"flow": {
    "triggers": [
        {
            "id": "change_target_temperature_more_than",
            "title": {
                "en": "The target temperature is more than",
                "nl": "De doeltemperatuur is meer dan"
            },
            "args": [
                {
                    "name": "device",
                    "type": "device",
                    "filter": "driver_id=inverter"
                },
                {
                    "name": "target_temperature",
                    "type": "number",
                    "placeholder": {
                        "en": "in C",
                        "nl": "in C"
                    }
                }
            ]
        }          
    ],
    "conditions": [
        {
            "id": "has_target_temperature_more_than",
            "title": {
                "en": "The target temperature is more than",
                "nl": "De doeltemperatuur is meer dan"
            },
            "args": [
                {
                    "name": "device",
                    "type": "device",
                    "filter": "driver_id=inverter"
                },
                {
                    "name": "target_temperature",
                    "type": "number",
                    "placeholder": {
                        "en": "in C",
                        "nl": "in C"
                    }
                }
            ]
        }
    ],
    "actions": [
      {
        "id": "turn_airco_on",
        "title": {
          "en": "Select a airconditioning mode",
          "nl": "Kies een modus voor de airconditioner"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=inverter"
          },
     	  {
     	  	"name": "mode",
     	  	"type": "dropdown",
     	  	"values": [ 
     	  		 { "id": "cooling", 
     	  			"label": { "en": "Cooling", "nl": "Koelen" } 
     	  		 },
     	  		 { "id": "heating", 
     	  			"label": { "en": "Heating", "nl": "Verwarmen" } 
     	  		 },
     	  		 { "id": "auto", 
     	  			"label": { "en": "Auto", "nl": "Auto" } 
     	  		 },
     	  		 { "id": "auto1", 
     	  			"label": { "en": "Auto 1", "nl": "Auto 1" } 
     	  		 },
     	  		 { "id": "auto2", 
     	  			"label": { "en": "Auto 2", "nl": "Auto 2" } 
     	  		 },
     	  		 { "id": "dehumid", 
     	  			"label": { "en": "Dehumidfication", "nl": "Ontvochtigen" } 
     	  		 },
     	  		 { "id": "fan", 
     	  			"label": { "en": "Fan", "nl": "Ventilator" } 
     	  		 }
     	   	  ]
     	   }

         ]
      },
      {
        "id": "turn_airco_off",
        "title": {
          "en": "The airconditioner will be",
          "nl": "De airconditioning wordt"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=inverter"
          },
     	  {
     	  	"name": "mode",
     	  	"type": "dropdown",
     	  	"values": [ 
     	  		 { "id": "off", 
     	  			"label": { "en": "turned off", "nl": "uitgezet" } 
     	  		 }
     	   	  ]
     	   }
        ]
      },
      {
        "id": "change_fan_rate",
        "title": {
          "en": "Select a fan rate",
          "nl": "Kies een ventilator snelheid"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=inverter"
          },
     	  {
     	  	"name": "frate",
     	  	"type": "dropdown",
     	  	"values": [ 
     	  		 { "id": "A", 
     	  			"label": { "en": "Auto", "nl": "Auto" } 
     	  		 },
     	  		 { "id": "B", 
     	  			"label": { "en": "Quiet", "nl": "Stil" } 
     	  		 },
     	  		 { "id": "3", 
     	  			"label": { "en": "Level 1", "nl": "Niveau 1" } 
     	  		 },
     	  		 { "id": "4", 
     	  			"label": { "en": "Level 2", "nl": "Niveau 2" } 
     	  		 },
     	  		 { "id": "5", 
     	  			"label": { "en": "Level 3", "nl": "Niveau 3" } 
     	  		 },
     	  		 { "id": "6", 
     	  			"label": { "en": "Level 4", "nl": "Niveau 4" } 
     	  		 },
     	  		 { "id": "7", 
     	  			"label": { "en": "Level 5", "nl": "Niveau 5" } 
     	  		 }
     	   	  ]
     	   }

         ]
      },
      {
        "id": "change_fan_direction",
        "title": {
          "en": "Select sweep",
          "nl": "Kies lamellen richting"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=inverter"
          },
     	  {
     	  	"name": "fdir",
     	  	"type": "dropdown",
     	  	"values": [ 
     	  		 { "id": "0", 
     	  			"label": { "en": "Stop", "nl": "Stop" } 
     	  		 },
     	  		 { "id": "1", 
     	  			"label": { "en": "Vertical", "nl": "Vertikaal" } 
     	  		 },
     	  		 { "id": "2", 
     	  			"label": { "en": "Horizontal", "nl": "Horizontaal" } 
     	  		 },
     	  		 { "id": "3", 
     	  			"label": { "en": "3D", "nl": "3D" } 
     	  		 }
     	   	  ]
     	   }

         ]
      },
      {
        "id": "change_target_temp",
        "title": {
            "en": "Change target temperature",
            "nl": "Wijzig doel temperatuur"
        },
       	"args": [
       	   {
       		  "name": "device",
       		  "type": "device",
       		  "filter": "driver_id=inverter"
       	    },
       	    {
              "name": "atemp",
              "type": "number",
              "min": "15",
              "max": "35",
              "placeholder" :
            {
               "en": "°C",
               "nl": "°C"
            }
       	  }
		]
      }      
    ]
  },
