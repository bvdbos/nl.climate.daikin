      },
      {
      "type": "group",
      "label": {
      "en": "Application refresh (all settings in seconds)",
      "nl": "Applicatie verversen (alle instelling in seconden)"
      },
      "children": [{
           "id": "interval",
           "type": "text",
           "label": {
           "en": "Polling interval",
           "nl": "Gegevens opvragen elke"
           },
           "value": "10",
           "min": 5,
           "max": 30.0,
           "step": 1  
