  "drivers": [
   {
     "id": "inverter",
     "name": {
       "en": "Inverter",
       "nl": "Inverter"
     },
     "class": "other",     
     "capabilities": [
       "airco_mode_inverter",
       "fan_rate",
       "fan_direction",
       "airco_humidity",
       "airco_temperature",
	   "measure_temperature.inside",
       "measure_temperature.outside" 
     ],
     "capabilitiesOptions": {
   		"airco_mode": {
   			"title": {
   				"en": "Airco",
   				"nl": "Airco"
              }   
          },
   		"fan_rate": {
   			"title": {
   				"en": "Fan",
   				"nl": "Vent."
              }   
          },
     	"fan_direction": {
     		"title": {
     			"en": "Wings",
     			"nl": "Lamel"
            }   
        },
     	"airco_humidity": {
     		"title": {
     			"en": "Set",
     			"nl": "Doel"
            }   
        },
  		"airco_temperature": {
  			"title": {
  				"en": "Set",
  				"nl": "Doel"
             }   
         },         
 		"measure_temperature.inside": {
 			"title": {
 				"en": "Inside",
 				"nl": "Binnen"
            }   
        },
		"measure_temperature.outside": {
			"title": {
				"en": "Outside",
				"nl": "Buiten"
			}
		}
     },     
     "mobile": {
         "components": [
             {
                 "id": "picker",
                 "capabilities": [
                     "airco_mode_inverter"
                  ]             
             },
             {
                 "id": "sensor",
                 "capabilities": [
                     "fan_rate",
                     "fan_direction"
                  ],
                 "options": {
                    "showTitle": true,
                    "icons": {
                        "fan_direction": "./drivers/inverter/assets/oscillation.svg",
                        "fan_rate": "./drivers/inverter/assets/house.svg"
                    }
                }
             },
             {
               "id": "thermostat",
               "capabilities": [ "airco_temperature" ]
             }
         ]
     },
     "images": {
       "large": "/drivers/inverter/assets/images/large.png",
       "small": "/drivers/inverter/assets/images/small.png"
     },	          
     "pair": [
         {
             "id": "start"
         },
         {
             "id": "list_my_devices",
             "template": "list_devices",
             "navigation": {
                 "next": "add_my_devices"
             }
         },
         {
              "id": "add_my_devices",
              "template": "add_devices"
         }
     ], 	 
     "settings": [
